#!/bin/bash

if $1 = "-h" || $1 = "--help"; then
  echo -e """usage: pscript [-e/--encode|-d/--decode|-c/--check] FILE [-h/--help]
optional arguments:
  -h, --help            show this help message and exit
  -e FILE, --encode FILE
                        Encode a ProtonScript program file.
  -d FILE, --decode FILE 
                        Decode a ProtonScript program file.
  -w FILE, --write FILE 
                        Write a ProtonScript program."""
                        
fi

if $1 = "-e" || $1 = "--encode"; then
  cd ~/proton/script/encoder
  python3 encoder.py $2
  exit

elif $1 = "-d" || $1 = "--decode"; then
  cd ~/proton/script/decoder
  python3 decoder.py $2
  exit
  
elif $1 = "-w" || $1 = "--write"; then
  nano $2
  exit
fi
